{
  "compilerOptions": {
    "target": "ES6",                           
    "module": "commonjs",                      
    "strict": true,                            
    "esModuleInterop": true,                   
    "experimentalDecorators": true,            
    "emitDecoratorMetadata": true,             
    "moduleResolution": "node",                
    "sourceMap": true,                         
    "outDir": "./dist",                        
    "baseUrl": ".",                            
    "resolveJsonModule": true,                 
    "skipLibCheck": true,                   
    "strictPropertyInitialization": false,   
    "forceConsistentCasingInFileNames": true   
  },
  "include": [
    "src/**/*.ts"                              
  ],
  "exclude": [
    "node_modules",                            
    "dist"                                     
  ]
}
